<div class="edit-content content-wrap">
  <h1>Editing Book</h1>
  
  <%= render 'layouts/errors', obj: @book %>
  
  <%= form_with model: @book do |f| %>
    <p>Title</p>
    <%= f.text_field :title, class: "form-box" %>
    <p>Body</p>
    <%= f.text_area :body, class: "form-box" %>
    <%= f.submit 'Update Book', class: "submit-button" %>
  <% end %>
  
  <div class="link-button">
    <%= link_to 'Edit', book_path(@book.id) %>
    <span> | </span>
    <%= link_to 'Back', books_path %>
  </div>
  
</div>